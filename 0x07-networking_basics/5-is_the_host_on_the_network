#!/bin/bash
# Check if exactly one argument is provided
if [ $# -eq 1 ]; then
  # Assign the argument to a variable with quotes for handling spaces
  ip_address="$1"

  # Ping the IP address 5 times
  ping -c 5 "$ip_address"
else
  # Display usage message with script name obtained from basename
  echo "Usage: ./$(basename "$0") {IP_ADDRESS}"
fi
